@model IEnumerable<WebBanHang.Models.EF.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Blog Start -->
<div class="container-fluid blog py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Luxury<span class="text-primary"> Watch Blog</span></h1>
            <p class="mb-0">
                Khám phá thế giới đồng hồ cao cấp qua những bài viết chuyên sâu về thương hiệu, công nghệ và xu hướng mới nhất trong ngành đồng hồ xa xỉ.
            </p>
        </div>
        @if (Model != null && Model.Any())
        {
            @Html.Action("Partial_News_Home", "News")
            <div class="row mt-4">
                <div class="col-12 text-center">
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        }
    </div>
</div>
<!-- Blog End -->

